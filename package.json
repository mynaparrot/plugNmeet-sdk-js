{
  "name": "plugnmeet-sdk-js",
  "version": "2.1.0",
  "description": "plugNmeet JS SDK",
  "author": "Jibon L. Costa",
  "license": "MIT",
  "repository": "https://github.com/mynaparrot/plugNmeet-sdk-js",
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rm -rf ./dist && parcel build",
    "lint": "oxlint --config=./.oxlintrc.json --fix",
    "lint:check": "oxlint --config=./.oxlintrc.json",
    "format:check": "prettier --check src/**/*.{jsx,ts,tsx}",
    "build-docs": "typedoc"
  },
  "targets": {
    "node": {
      "isLibrary": true,
      "engines": {
        "node": ">= 16"
      }
    }
  },
  "dependencies": {
    "@bufbuild/protobuf": "2.11.0",
    "axios": "1.13.2",
    "plugnmeet-protocol-js": "1.2.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.16.3",
    "@parcel/transformer-typescript-types": "2.16.3",
    "@prettier/plugin-oxc": "0.1.3",
    "@types/node": "25.0.9",
    "oxlint": "1.41.0",
    "parcel": "2.16.3",
    "prettier": "3.8.0",
    "typedoc": "0.28.16",
    "typescript": "5.9.3"
  }
}
